
@model Feedback

<form method="POST">
     <br />
     <br />
     <br />
    <div class="border p-3 mt-4">
        <div class="row-2 pb-2">
            <h2 class="text-primary">Send Feedback</h2>
        </div>

        <br />

        <div class="mb-3">
            <label asp-for="CustomerFeedback">Enter your feedback:</label>
            <input asp-for="CustomerFeedback" class="form-control" /> 
            <span asp-validation-for="CustomerFeedback" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary" style="width:150px">Send Feedback!</button>
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
            Back
        </a>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}